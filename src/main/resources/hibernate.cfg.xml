<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <!-- Database connection settings -->
    <property name="hibernate.query.factory_class">org.hibernate.hql.internal.classic.ClassicQueryTranslatorFactory</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/controleSala</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">123</property>
    <!-- JDBC connection pool (use the built-in) -->
    <property name="hibernate.connection.pool_size">1</property>
    <!-- SQL dialect -->
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <!-- Enable Hibernate's automatic session context management -->
    <property name="hibernate.current_session_context_class">thread</property>
    <!-- Disable the second-level cache  -->
    <property name="hibernate.cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>
    <!-- Echo all executed SQL to stdout -->
    <property name="hibernate.show_sql">true</property>
    <!-- Drop and re-create the database schema on startup -->
    <property name="hibernate.hbm2ddl.auto">update</property>
    <mapping resource="br.com.ufba.roomsmanager/Usuario.hbm.xml"/>
    <mapping resource="br.com.ufba.roomsmanager/Setor.hbm.xml"/>
    <mapping resource="br.com.ufba.roomsmanager/Sala.hbm.xml"/>
    <mapping resource="br.com.ufba.roomsmanager/ReservaSala.hbm.xml"/>
    <mapping resource="br.com.ufba.roomsmanager/Tipo.hbm.xml"/>
    <mapping resource="br.com.ufba.roomsmanager/Acesso.hbm.xml"/>
    <mapping resource="br.com.ufba.roomsmanager/ControleAcesso.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
